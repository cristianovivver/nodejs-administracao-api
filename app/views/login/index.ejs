<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8">
  <title>Administração</title>
  <base href="/">

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" type="image/x-icon" href="images/vivver.ico">
  
  <script src="jquery/dist/jquery.min.js"></script>
  <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="bootstrap/dist/css/bootstrap-theme.min.css">
  <script src="bootstrap/dist/js/bootstrap.min.js"></script>  
  <link rel="stylesheet" src="css/login.css">
  <script src="js/login.js"></script>  
</head>
<body>
    
    <div class="container container-login">
        <div class="panel panel-primary">
            <div class="panel-heading">Login</div>
            <div class="panel-body">        
                
                <%if ( validacao.length > 0 ) {%>                
                    <div *ngIf="formErrors" class="alert alert-danger">
                    <strong>
                        <span class="glyphicon glyphicon-warning-sign"></span>
                        Ocorreu um erro ao tentar entrar no sistema.
                    </strong>
                    <ul>
                        <% for(var i = 0; i < validacao.length; i++) { %>
                            <li><%= validacao[i].msg %></li>
                        <% } %>
                    </ul>
                    </div>   
                <%}%>

                <div id="mensagem"></div>
                
                <form class="form-horizontal" action="/login" method="POST">      
                    <div class="form-group has-feedback" [ngClass]="formUtils.fieldClassForErrorOrSuccess('login')">
                        <label for="login" class="col-sm-2 control-label">Login</label>
                        <div class="col-sm-10">
                        <input type="text" class="form-control" id="login" name="login" placeholder="e-mail" formControlName="login">
<!--                        
                        <%if ( validacao.length > 0 ) {%>
                        <span class="glyphicon form-control-feedback glyphicon-remove"></span>
                        
                        <div *ngIf="formUtils.showFieldError('login')" class="text-danger">
                            <div *ngIf="form.get('login').errors.required">o login é obrigatório</div>
                        </div>
                        <%}%>
-->                        
                        </div>
                    </div>            

                    <div class="form-group has-feedback" [ngClass]="formUtils.fieldClassForErrorOrSuccess('senha')">
                        <label for="senha" class="col-sm-2 control-label">Senha</label>
                        <div class="col-sm-10">
                        <input type="password" class="form-control" id="senha" name="senha" placeholder="Senha" formControlName="senha">
                        <span class="glyphicon form-control-feedback" [ngClass]="formUtils.iconClassForErrorOrSuccess('senha')"></span>
<!--                    
                        <div *ngIf="formUtils.showFieldError('senha')" class="text-danger">
                            <div *ngIf="form.get('senha').errors.required">a senha é obrigatória</div>
                        </div>
                    -->                        
                        </div>
                    </div>
            
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" class="btn btn-primary" id="btn-login" >Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>


